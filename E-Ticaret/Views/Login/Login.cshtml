@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- displays site properly based on user's device -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    <link href="~/css/login.css" rel="stylesheet" />

    <title>LOGİN</title>
    <style>
        .attribution {
            font-size: 11px;
            text-align: center;
        }

            .attribution a {
                color: hsl(228, 45%, 44%);
            }
            .row{
                margin-bottom:10px;
                margin-left:130px;
            }
    </style>
</head>
<body>

    <div class="boyut">
        @using (Html.BeginForm())
        {
            
            <div class="logo">
                <img style="padding:13px 1px 13px 9px; " src="/img/login.jpg" width="97%" class="imgclass">
            </div>
            <br>

            <div class="login">
                <div class="form-floating mb-3">
                    <input class="form-control" name="userName" type="text" placeholder="name@example.com" style="background-color:#080B1C;" />
                    <label for="floatingInput">KULLANICI GİRİŞ</label>
                </div>

                <div class="form-floating">
                    <input class="form-control" name="password" type="password" placeholder="Pasword" style="background-color:#080B1C;" />
                    <label for="floatingPassword">ŞİFRE</label>
                </div>
                <br><br>
                <input class="button" type="submit" name="button" value="GİRİŞ">
                <button type="button" class="button" data-bs-toggle="modal" data-bs-backdrop="static" data-bs-keyboard="false" data-bs-target="#kayitOlModal">KAYIT OL</button>
                  <button type="button" class="button" data-bs-toggle="modal" data-bs-backdrop="static" data-bs-keyboard="false" data-bs-target="#MagazaAcModal">Magaza Aç</button>

            </div>
        }
    </div>

    <div class="modal fade bd-example-modal-lg" id="kayitOlModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <form method="post" enctype="multipart/form-data" asp-controller="Kullanicilar" asp-action="KullanicilarEkle">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Kullanıcı Kaydol</h5>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-floating row">
                            <input class="form-control" type="text" placeholder="text" name="Ad" required style="background-color:white; width: 500px" />
                            <label for="floatingPassword">ADI : </label>
                        </div>
                        <div class="form-floating row">
                            <input class="form-control" type="text" placeholder="text" name = "Soyad" style="background-color:white; width: 500px" />
                            <label for="floatingPassword">SOYADI</label>
                        </div>
                        <div class="form-floating row">
                            <input class="form-control" type="email" placeholder="text" name="Mail" required style="background-color:white; width: 500px" />
                            <label for="floatingPassword">MAİL</label>
                        </div>
                        <div class="form-floating row">
                            <input class="form-control" type="password" placeholder="Pasword" name="Sifre" required style="background-color:white; width: 500px" />
                            <label for="floatingPassword">ŞİFRE</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                        <button type="submit" class="btn btn-primary">Kaydol</button>
                    </div>
                </div>

            </form>
        </div>
    </div><!--MusteriEkleModel-->



     <div class="modal fade bd-example-modal-lg" id="MagazaAcModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <form method="post" enctype="multipart/form-data" asp-controller="Magaza" asp-action="MagazaEkle">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Mağaza Kaydol</h5>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-floating row">
                            <input class="form-control" type="text" placeholder="text" name="Ad" required style="background-color:white; width: 500px" />
                            <label for="floatingPassword">ADI : </label>
                        </div>
                        <div class="form-floating row">
                            <input class="form-control" type="text" placeholder="text" name = "Soyad" style="background-color:white; width: 500px" />
                            <label for="floatingPassword">SOYADI</label>
                        </div>
                        <div class="form-floating row">
                            <input class="form-control" type="email" placeholder="text" name="Mail" required style="background-color:white; width: 500px" />
                            <label for="floatingPassword">MAİL</label>
                        </div>
                        <div class="form-floating row">
                            <input class="form-control" type="password" placeholder="Pasword" name="Sifre" required style="background-color:white; width: 500px" />
                            <label for="floatingPassword">ŞİFRE</label>
                        </div>
                         <div class="form-floating row">
                            <input class="form-control" type="text" placeholder="Pasword" name="MagazaAd" required style="background-color:white; width: 500px" />
                            <label for="floatingPassword">MAĞAZA AD</label>
                        </div>
                         <div class="form-floating row">
                            <input class="form-control" type="email" placeholder="Pasword" name="MagazaMail" required style="background-color:white; width: 500px" />
                            <label for="floatingPassword">MAĞAZA MAİL</label>
                        </div>
                         <div class="form-floating row">
                            <input class="form-control" type="text" placeholder="Pasword" name="MagazaAdres" required style="background-color:white; width: 500px" />
                            <label for="floatingPassword">MAĞAZA ADRES</label>
                        </div>




                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                        <button type="submit" class="btn btn-primary">Kaydol</button>
                    </div>
                </div>

            </form>
        </div>
    </div><!--MusteriEkleModel-->
    <br>
    <br>
    <br>
    <br>
</body>
</html>

